<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4875B4"
    android:gravity="start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hr.foi.air.icydemo.MainActivity" 
    xmlns:app="http://schemas.android.com/apk/res/com.example.icy" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".3" >

                   <TextView
                       android:id="@+id/monthLabel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="Odaberite mjesec:" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".7"
                   android:paddingLeft="20dp" >

                   <Spinner
                       android:id="@+id/spinnermjeseci"
                       android:layout_width="match_parent"
                       android:layout_height="47dp" 
                       android:entries="@array/mjeseci" />

               </LinearLayout>
	               

            </LinearLayout>
            
            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="20dp"
	                android:orientation="horizontal" >
	               <LinearLayout
	                   android:layout_width="0dp"
	                   android:layout_height="match_parent"
	                   android:layout_weight=".7"
	                   android:paddingLeft="20dp" >
	                   
	                   <Button
	                        android:id="@+id/prikazi"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:text="Prikaži"
	                        android:onClick="onClickPrikazi"
	                        android:textColor="@android:color/white" />
                   </LinearLayout>
               </LinearLayout>
            
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

           
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".3" >

                   <TextView
                       android:id="@+id/izvjestajLabel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="Plaća za odabrani mjesec: " />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".7"
                   android:paddingLeft="20dp" >

                   <TextView
                       android:id="@+id/editIzvjestaj"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="Rezultat ">

                       <requestFocus />
                   </TextView>

               </LinearLayout>
               
               

            </LinearLayout>
            
            
            </LinearLayout>
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

           
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".3" >

                   <TextView
                       android:id="@+id/satiLabel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="Broj odrađenih sati: " />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".7"
                   android:paddingLeft="20dp" >

                   <TextView
                       android:id="@+id/editSati"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="Rezultat ">

                       <requestFocus />
                   </TextView>

               </LinearLayout>
            </LinearLayout>

            </LinearLayout>
           </LinearLayout>
            
    </ScrollView>

</RelativeLayout>